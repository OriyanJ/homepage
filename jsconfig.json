{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "paths": {
      "public/*": ["public/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", ".next"]
}
